<% provide(:title, 'Registration') %>
<h1>Registration</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'misc/error_messages', object: f.object %>      
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "BestÃ¤tigen" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Account anlegen", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>