<% provide(:title, "Login") %>
<h1>Logge Dich ein</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Login", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Jetzt registrieren!", signup_path %></p>
  </div>
</div>