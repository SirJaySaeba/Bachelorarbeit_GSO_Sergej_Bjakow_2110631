<%= form_for(@game, :html => { :class => 'form-horizontal'}) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title, class: "control-label"%>
    <div class="controls"><%= f.text_field :title %></div>
  </div>
  <div class="control-group">
    <%= f.label :developer, class: "control-label" %>
    <div class="controls"><%= f.text_field :developer %></div>
  </div>
  <div class="control-group">
    <%= f.label :release, class: "control-label" %>
    <div class="controls date_field"><%= f.date_select :release, start_year: Time.now.year - 100,
    							end_year: Time.now.year  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :system, class: "control-label" %>
    <div class="controls"><%= f.text_field :system %> </div>
  </div>
  
    <%= f.submit "Spiel anlegen", class: "btn btn-large btn-primary controls"%>
  
<% end %>
